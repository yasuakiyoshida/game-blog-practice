<% @games.each do |game| %>
<div>
  <%= link_to game_path(game.id) do %>
    <%= attachment_image_tag game, :image %>
  <% end %>
  <p>投稿ユーザー画像：<%= image_tag('sample-author1.jpg') %></p>
  <p>タイトル：<%= game.game_title %></p>
  <p>感想：<%= game.impressions %></p>
  <p>ユーザーネーム：<%= game.user.name %></p>
</div>
<% end %>