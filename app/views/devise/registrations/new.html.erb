<div class="jumbotron jumbotron-fluid text-center", id="jumbotron-form">
  <div class="container">
    <div class="row no-gutters"><!-- no-guttersでrowに最初から設定されている-15pxを無くす -->
      <div class="col-lg-5 shadow-lg mx-auto my-5"><!-- shadow-lg:周囲に陰影 -->
        <h4 class="bg-secondary text-light py-3">Welcome Sign in</h4>
        <p class="text-light">新規登録</p>
        <div class="form-body p-5 text-light">
          <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            
            <div class="form-group">
              <%= f.text_field :name, autofocus: true, placeholder: "ユーザー名", class: "form-control bg-transparent text-light", id: "user_name" %>
            </div>
          
            <div class="form-group">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "form-control bg-transparent text-light", id: "user_email" %>
            </div>
          
            <div class="form-group">
              <!--<% if @minimum_password_length %>-->
              <!--<em>(<%= @minimum_password_length %> characters minimum)</em>-->
              <!--<% end %><br />-->
              <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード（6文字以上）", class: "form-control bg-transparent text-light", id: "user_password" %>
            </div>
          
            <div class="form-group">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード確認", class: "form-control bg-transparent text-light", id: "password_confirmation" %>
            </div>
          
            <div class="actions mb-3">
              <%= f.submit "新規登録する", class: "btn btn-block btn-info mt-4" %>
            </div>
          <% end %>
          
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>